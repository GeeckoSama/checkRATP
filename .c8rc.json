{
  "all": true,
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/node_modules/**",
    "**/tests/**",
    "**/bin/**",
    "**/build/**",
    "**/config/**",
    "**/database/**",
    "**/start/**",
    "**/*.d.ts"
  ],
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 70
}
